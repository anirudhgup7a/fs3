.app-container {
  text-align: center;
  margin-top: 40px;
}

h2 {
  font-family: 'Georgia', serif;
  margin-bottom: 20px;
}

.product-list {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.product-card {
  border: 1px solid #ccc;
  border-radius: 10px;
  padding: 20px;
  width: 200px;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  background-color: #fafafa;
}

.product-card h3 {
  margin-bottom: 10px;
  font-family: 'Georgia', serif;
}

.product-card p {
  margin: 5px 0;
  color: #333;
}
